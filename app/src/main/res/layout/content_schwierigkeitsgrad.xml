<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dt_yellow"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".SchwierigkeitsgradActivity"
    tools:showIn="activity_schwierigkeitsgrad"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/schwierigkeit_txt"
                android:id="@+id/txt_fragenwieschwer"
                android:textAlignment="center"
                android:textSize="@dimen/textgroesse"
                android:paddingBottom="@dimen/feldpadding"
                android:paddingTop="@dimen/feldpadding"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radgrp_schwierigkeit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="60dp">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schwierigkeit_sa_rb"
                    android:id="@+id/radstufealle"
                    android:checked="true"
                    android:textSize="@dimen/textgroesse"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schwierigkeit_s0_rb"
                    android:id="@+id/radstufe0"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/textgroesse"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schwierigkeit_s1_rb"
                    android:id="@+id/radstufe1"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/textgroesse"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schwierigkeit_s2_rb"
                    android:id="@+id/radstufe2"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/textgroesse"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schwierigkeit_s3_rb"
                    android:id="@+id/radstufe3"
                    android:layout_marginTop="25dp"
                    android:textSize="@dimen/textgroesse"/>
            </RadioGroup>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speichern_btn"
                android:id="@+id/btn_schwierigkeitspeichern"
                android:layout_marginTop="25dp"
                android:paddingBottom="@dimen/feldpadding"
                android:paddingTop="@dimen/feldpadding"
                android:background="@color/green"
                android:textSize="@dimen/textgroesse"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>