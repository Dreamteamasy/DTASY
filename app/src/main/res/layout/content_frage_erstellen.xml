                android:layout_height="wrap_content"
                android:text="@string/frage_erstellen_btn"
                android:id="@+id/btnFrageErstellen"
                android:textSize="20dp"
                android:layout_below="@+id/bildText"
                android:layout_centerHorizontal="true"
