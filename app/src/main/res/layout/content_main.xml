<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="at.campus02.asy.helloworld.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/campus02_yellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_text_title"
        android:id="@+id/tv_title"
        style="@style/Heading1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_logo"
        android:layout_below="@+id/tv_title"
        android:src="@drawable/campus02_logo"
        android:adjustViewBounds="true"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="@string/main_infotext"
        android:id="@+id/tv_info"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:gravity="center"
        android:textColor="@color/campus02_blue"
        android:background="@color/white"
        android:paddingBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="18dp"
        android:id="@+id/et_name"
        android:layout_below="@+id/tv_info"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:background="@color/yellow"
        android:textColor="@color/campus02_blue" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/tv_alter"
        android:text="@string/main_info_alter"
        android:layout_below="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:gravity="center"
        android:textColor="@color/campus02_blue"
        android:background="@color/white"
        android:paddingBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="18dp"
        android:id="@+id/et_age"
        android:layout_below="@+id/tv_alter"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:background="@color/yellow"
        android:textColor="@color/campus02_blue" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_button_next"
        android:id="@+id/button_next"
        android:layout_below="@+id/et_age"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:onClick="goNext"/>


</RelativeLayout>
