<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/campus02_yellow"
    tools:context="at.campus02.asy.helloworld.GameActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_text_title"
        android:id="@+id/game_title"
        style="@style/Heading1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_game_greeting"
        style="@style/StandardText"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_game_highscore"
        style="@style/HighScore"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_game_question"
        style="@style/QuestionText"
        android:paddingTop="20dp"
        android:paddingBottom="40dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/table_layout_answers">

        <!-- 1 column -->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="0.5"
                android:onClick="answerButton" />

        <!-- 2 column -->


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/button2"
            android:layout_weight="0.5"
            android:onClick="answerButton" />

        </TableRow>

        <!-- 2 row -->
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/button3"
            android:layout_weight="0.5"
            android:onClick="answerButton" />


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/button4"
            android:layout_weight="0.5"
            android:onClick="answerButton" />


        </TableRow>

    </TableLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_button_next"
        android:id="@+id/button_nextLevel"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:onClick="nextLevel"
        android:visibility="invisible"/>


</LinearLayout>
