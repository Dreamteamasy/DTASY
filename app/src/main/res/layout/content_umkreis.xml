<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/campus02_yellow"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    tools:context=".UmkreisActivity"
    tools:showIn="@layout/activity_umkreis">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aus welchem Umkreis sollen die Fragen kommen?"
        android:id="@+id/txt_welcherumkreis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/grid_umkreis"
        android:layout_below="@+id/txt_welcherumkreis"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_umkreisantwort"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="20"
            android:textAlignment="center"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:id="@+id/textView"
            android:layout_below="@+id/txt_welcherumkreis"
            android:layout_toEndOf="@+id/button"
            android:layout_marginTop="55dp"
            android:textSize="20dp"
            android:layout_column="1"
            android:layout_row="0"/>
    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Die Einstellungen wurden gespeichert"
        android:id="@+id/btn_umkreisspeichern"
        android:layout_below="@+id/grid_umkreis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@color/green"
        android:onClick="umkreiszwischenspeichern"/>

</RelativeLayout>