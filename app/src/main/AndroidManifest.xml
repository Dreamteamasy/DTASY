            android:label="@string/title_activity_dskategorie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DSUmgebungActivity"
            android:label="@string/title_activity_dsumgebung"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

