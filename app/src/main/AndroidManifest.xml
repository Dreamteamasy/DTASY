            android:name=".DSAlleFragenActivity"
            android:label="@string/title_activity_detailscreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaxFragenActivity"
            android:parentActivityName=".EinstellungenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BenutzernameActivity"
            android:parentActivityName=".EinstellungenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SchwierigkeitsgradActivity"
            android:parentActivityName=".EinstellungenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UmkreisActivity"
